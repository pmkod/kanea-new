    // "noEmit": true,
    // "composite": true,
    // "composite": false,
    // "declaration": false,
    // "declarationMap": false,
    // "strict": true,
    // "downlevelIteration": true,
    // "forceConsistentCasingInFileNames": true,
    // "allowJs": true,
    // "allowArbitraryExtensions": true
  },
  "include": ["./src/**/*"],


}
