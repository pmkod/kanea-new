{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./src",
    "moduleResolution": "Node",
    "paths": {
      "/*.ts": ["./*.ts"],
      "/*.js": ["./*.js"]
      // "/*": ["./*.ts", "./*.js", "./*"]
    },
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
